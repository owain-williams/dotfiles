{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "leading_powerline_symbol": " ÓÇ∂",
          "foreground": "#1C1E28",
          "background": "#ACD7FF",
          "properties": {
            "style": "mixed",
            "mapped_locations": {}
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "#A6ACCD",
          "background": "#313340",
        "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#313340{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#313340{{ end }}",
            "{{ if gt .Ahead 0 }}#313340{{ end }}",
            "{{ if gt .Behind 0 }}#313340{{ end }}"
          ],
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} ÔÅÑ {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} ÔÅÜ {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} ÔÉá {{ .StashCount }}{{ end }}",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "untracked_modes": {
              "/Users/owainwilliams/Projects/oh-my-posh/": "no"
            },
            "source": "cli",
            "mapped_branches": {
              "feat/*": "üöÄ ",
              "bug/*": "üêõ "
            }
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "display_mode": "files",
            "fetch_package_manager": false,
            "home_enabled": false
          },
          "foreground": "#5DE4C7",
          "type": "node",
          "style": "plain",
          "powerline_symbol": "\ue0b2",
          "template": " Óúò v{{ .Full }} "
        },
        {
          "properties": {
            "cache_duration": "none",
            "time_format": "15:04"
          },
          "foreground": "#1C1E28",
          "background": "#ACD7FF",
          "type": "time",
          "style": "powerline",
          "powerline_symbol": "\ue0b2",
          "invert_powerline": true
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "‚ùØ ",
          "foreground": "#d0679d",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}
